<?xml version="1.0" encoding="utf-8"?>
<project name="JPA_Rahmen" default="jarBuilder" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">
    <property file="build.properties" />
	<target name="jarBuilder" description="JAR Archiv fÃ¼r Ivy erzeugen">
    	<jar jarfile="${module.name}.jar"  basedir="bin" 
    		 includes="de/kbs/${module.name}/**/*.class">
		 	<manifest>    		  	
	   			<attribute name="Implementation-Title" value="${module.name}"/>    		  	
	   			<attribute name="Implementation-Vendor" value="DRV KBS"/>    		  	
	   			<attribute name="Implementation-Vendor-Id" value="de.kbs"/>    		  	
	   			<attribute name="Implementation-Version" value="${revision}"/>	       	
			</manifest>	
        </jar>	   	
		<ivy:settings file="S:/Java/Apache Ivy/Settingdateien_Ivy_Artifactory/ivysettings_publish.xml" />
		<ivy:makepom ivyfile="ivy.xml" pomfile="${module.name}.pom" />
		<ivy:publish 	resolver="main" 
						organisation="${organisation}" 
						module="${module.name}"
						revision="${revision}" 
						srcivypattern="ivy.xml"
						overwrite="true">
			<artifacts pattern="[artifact].[ext]" />
		</ivy:publish>
  	</target>
</project>